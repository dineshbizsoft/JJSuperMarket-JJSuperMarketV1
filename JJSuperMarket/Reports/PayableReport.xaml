<UserControl x:Class="JJSuperMarket.Reports.PayableReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JJSuperMarket.Reports"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="600" d:DesignWidth="1100">
    <Grid>

        <GroupBox x:Name="grbPayable" Header="Payable Report" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <GroupBox x:Name="grbSupplier" Header="Supplier[ Purchase Report ]" Grid.Column="0">
                    <DataGrid x:Name="dgvPayableSupplier" />
                </GroupBox>
                <GroupBox x:Name="grbCustomer" Header="Customer[ Sales Return Report ] " Grid.Column="1">
                    <DataGrid x:Name="dgvPayableCustomer"/>
                </GroupBox>
            </Grid>
        </GroupBox>


    </Grid>
</UserControl>
